<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History</title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-gray-800">

    <!-- Navbar -->
    <%- include('partials/navbar', { page: '/userHistory' }) %>

    <div class="container mx-auto max-w-md mt-10 p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-center text-2xl font-bold">Your Login History</h1>

        <% if (session.user && session.user.loginHistory.length > 0) { %>
            <ul class="mt-4">
                <% session.user.loginHistory.forEach((history, index) => { %>
                    <li class="py-2 border-b">
                        <p><strong>Login <%= index + 1 %>:</strong> <%= history.dateTime %></p>
                        <p><strong>User Agent:</strong> <%= history.userAgent %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="mt-4 text-center">No login history available.</p>
        <% } %>

        <div class="mt-6 text-center">
            <a href="/lego/sets" class="bg-blue-500 text-white p-2 rounded">Back to Lego Sets</a>
        </div>
    </div>

</body>
</html>
